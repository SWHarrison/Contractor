<!-- views/clients-show.handlebars -->

<a href="/">Back to Home</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{client.title}}</h1>
    <p>{{client.description}}</p>
    <p><a href="/clients/{{client._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/clients/{{client._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>

    <!-- Donation form -->
    {{> donation-form}}
    <hr>
    <!-- Show Donations -->
    {{#each donations}}
      {{> donation}}
    {{/each}}
  </div>
</div>
